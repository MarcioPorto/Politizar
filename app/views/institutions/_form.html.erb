
<%= simple_form_for(@institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :member %>
    <%= f.input :member_plural %>
    <%= f.association :country %>
    <%= f.association :region %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
